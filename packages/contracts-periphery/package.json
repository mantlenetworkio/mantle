{
  "name": "@mantleio/contracts-periphery",
  "version": "1.0.7",
  "description": "[Mantle] External (out-of-protocol) L1 and L2 smart contracts for Mantle",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/types",
    "artifacts/contracts/**/*.json",
    "deployments/**/*.json",
    "contracts"
  ],
  "scripts": {
    "build": "yarn build:hh",
    "build:hh": "hardhat compile --show-stack-traces",
    "build:forge": "forge build",
    "test": "yarn test:forge",
    "test:forge": "forge test",
    "test:coverage": "yarn test:coverage:forge",
    "test:coverage:forge": "forge coverage",
    "test:slither": "slither .",
    "gas-snapshot": "forge snapshot",
    "pretest:slither": "rm -f @openzeppelin && rm -f hardhat && ln -s node_modules/@openzeppelin @openzeppelin && ln -s ../../node_modules/hardhat hardhat",
    "posttest:slither": "rm -f @openzeppelin && rm -f hardhat",
    "lint:ts:check": "eslint . --max-warnings=0",
    "lint:contracts:check": "yarn solhint -f table 'contracts/**/*.sol'",
    "lint:check": "yarn lint:contracts:check && yarn lint:ts:check",
    "lint:ts:fix": "eslint --fix .",
    "lint:contracts:fix": "yarn prettier --write 'contracts/**/*.sol'",
    "lint:fix": "yarn lint:contracts:fix && yarn lint:ts:fix",
    "lint": "yarn lint:fix && yarn lint:check",
    "clean": "rm -rf ./dist ./artifacts ./forge-artifacts ./cache ./coverage ./tsconfig.tsbuildinfo",
    "prepublishOnly": "yarn copyfiles -u 1 -e \"**/test-*/**/*\" \"contracts/**/*\" ./",
    "postpublish": "rimraf chugsplash L1 L2 libraries standards",
    "prepack": "yarn prepublishOnly",
    "postpack": "yarn postpublish",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "mantle",
    "ethereum",
    "contracts",
    "periphery",
    "solidity"
  ],
  "homepage": "https://github.com/mantlenetworkio/mantle/tree/develop/packages/contracts-periphery#readme",
  "license": "MIT",
  "author": "Mantle PBC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mantlenetworkio/mantle.git"
  },
  "devDependencies": {
    "@mantleio/contracts-bedrock": "0.13.0",
    "@mantleio/core-utils": "^0.12.0",
    "@mantleio/hardhat-deploy-config": "^0.2.5",
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@rari-capital/solmate": "7.0.0-alpha.3",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/contracts-upgradeable": "4.7.3",
    "@types/node": "^17.0.21",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.3.0",
    "dotenv": "^10.0.0",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#3778c3cb8e4244cb5a1c3ef3ce1c71a3683e324a",
    "hardhat": "^2.9.6",
    "hardhat-deploy": "^0.11.10",
    "hardhat-gas-reporter": "^1.0.8",
    "lint-staged": "11.0.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.7",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0"
  }
}
